<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
    controllerName="zfsaccountcreation.controller.MainWizard"
>
    <form:SimpleForm
        editable="true"
        layout="ResponsiveGridLayout"
    >
        <core:Fragment
            fragmentName="zfsaccountcreation.view.StepB"
            type="XML"
        />

        <Label
            text="{i18n>Level1}" 
            required="true"
        />
        <Select
            change="onChangeLevel1"
            forceSelection="false"
            selectedKey="{StepModel>/SelectedLevel1}"
            items="{
            path: 'StepModel>/Level1items',
            sorter: { path: 'Level01' }
        }"
        >
            <core:Item
                key="{StepModel>Level01}"
                text="{StepModel>Level01} {StepModel>Descrption}"
            />
        </Select>
    </form:SimpleForm>
</core:FragmentDefinition>
