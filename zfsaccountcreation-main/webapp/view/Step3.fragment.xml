<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
    controllerName="zfsaccountcreation.controller.MainWizard"
>
    <form:SimpleForm
        editable="true"
        layout="ResponsiveGridLayout"
    >
        <core:Fragment
            fragmentName="zfsaccountcreation.view.StepB"
            type="XML"
        />

        <Label
            text="{i18n>Level2}" 
            required="true"
        />
        <Select
            change="onChangeLevel2"
            forceSelection="false"
            selectedKey="{StepModel>/SelectedLevel2}"
            items="{
            path: 'StepModel>/Level2items',
            sorter: { path: 'Level02' }
        }"
        >
            <core:Item
                key="{StepModel>Level02}"
                text="{StepModel>Level02} {StepModel>Descrption}"
            />
        </Select>
    </form:SimpleForm>
</core:FragmentDefinition>
